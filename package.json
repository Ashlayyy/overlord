{
	"name": "overlord-chat",
	"version": "1.0.0",
	"main": "dist/index.js",
	"scripts": {
		"build": "pnpm run build:compile && pnpm run build:public",
		"build:compile": "esbuild src/index.ts --bundle --format=cjs --platform=node --outdir=dist",
		"build:public": "copyfiles \"public/**/*\" dist/",
		"start": "node dist/index.js",
		"lint": "eslint src --ext ts",
		"format": "npx prettier --write \"src/**/*.ts\"",
		"dev": "nodemon -e js,htm,css,ts,mp3 --watch src --watch public --exec \"pnpm run dev:start\"",
		"dev:start": "pnpm run build && pnpm run start"
	},
	"author": "Michael Jolley <mike@baldbeardedbuilder.com>",
	"devDependencies": {
		"@types/mocha": "^10.0.6",
		"@types/node": "^20.11.19",
		"@types/ws": "^8.5.10",
		"copyfiles": "^2.4.1",
		"esbuild": "^0.20.1",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"mocha": "^10.3.0",
		"nodemon": "^3.1.0",
		"typescript": "^5.3.3"
	},
	"dependencies": {
		"@fastify/static": "^7.0.1",
		"@fastify/websocket": "^9.0.0",
		"fastify": "^4.26.1"
	}
}
